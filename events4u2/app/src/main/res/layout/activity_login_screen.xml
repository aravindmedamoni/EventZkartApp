<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".LoginScreen">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/event"
                android:layout_width="250dp"
                android:layout_height="160dp" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/lgnumber"
                    android:drawableLeft="@drawable/number"
                    android:drawablePadding="10dp"
                    android:singleLine="true"
                    android:layout_marginTop="30dp"
                    android:fontFamily="serif"
                    android:textSize="20dp"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/lgpassword"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="10dp"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="serif"
                    android:textSize="20dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:fontFamily="serif"
                    android:onClick="clickloginbtn"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:text="Login"
                    android:background="@drawable/shape"
                    android:textColor="#ffffff"
                    android:layout_width="355dp"
                    android:layout_height="wrap_content" />





            <LinearLayout
                android:layout_marginTop="26dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:onClick="clickfrgtpswd"
                    android:textColor="#263238"
                    android:fontFamily="serif"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    android:text="Forgot Password?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:onClick="clickrgstrbtn"
                    android:textColor="#263238"
                    android:fontFamily="serif"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:textSize="16dp"
                    android:text="New?Register Now!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

    </LinearLayout>


            <ImageView
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:src="@drawable/tranferent"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="2dp"/>
</RelativeLayout>